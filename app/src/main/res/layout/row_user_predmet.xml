<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app.background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_predmet"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Математика"
        android:textSize="18sp"
        android:textColor="@color/text.white.primary"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_add_remove"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/predmets.button.remove.text"
        android:textColor="@color/text.white.primary"
        app:backgroundTint="@color/colorAccent"
        />


</LinearLayout>